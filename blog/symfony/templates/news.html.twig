{% extends 'base.html.twig' %}
{% use 'blocks/left_menu.html.twig' %}
{% use 'blocks/news.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col"><h1>Список</h1></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-3 bg-dark text-light pr-5">
            {% block left_menu %}
                {{ parent() }}
            {% endblock %}
            </div>
            <div class="col-12 col-md-9">
                {% block news %}
                    {{ parent() }}
                {% endblock %}
                <br />
                {% include 'blocks/pagination.html.twig' with {'count':pagination.max, 'current':pagination.current} only %}
            </div>
        </div>
    </div>
{% endblock %}


